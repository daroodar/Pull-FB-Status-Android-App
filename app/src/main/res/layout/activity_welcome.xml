<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b5998"
    tools:context="com.example.daroodar.qbwirelessapp.WelcomeActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Status Update FB\nDummy Test Company"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/tempText"
    android:layout_marginBottom="30dp"
    android:textAlignment="center"
    android:textStyle="bold"
    android:textSize="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempText"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempText"
        android:textSize="20dp"
        android:text="QB Wireless Test Android App"
        android:id="@+id/QBWirelessTest"
        android:layout_centerInParent="true"/>
</RelativeLayout>
